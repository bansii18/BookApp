<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="/style.css">
  <title>All Books</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .book-card {
      background-color: white;
      color: black;
      border-radius: 10px;
      padding: 15px;
      margin: 20px auto;
      max-width: 900px;
      display: flex;
      box-shadow: 0 0 10px rgba(255, 255, 255, 0.2);
    }
    .book-image {
      width: 180px;
      height: 260px;
      object-fit: cover;
      border-radius: 5px;
    }
    .book-info {
      flex: 1;
      margin-left: 20px;
      position: relative;
    }
    .author-box {
      background-color: yellow;
      display: inline-block;
      padding: 2px 6px;
      font-weight: bold;
      border-radius: 4px;
    }
    .category-text {
      opacity: 0.6;
      font-weight: 500;
    }
    .star-rating {
      color: gold;
      font-size: 18px;
    }
    .action-icons {
      position: absolute;
      top: 0;
      right: 0;
    }
    .action-icons a, .action-icons form {
      display: inline-block;
      margin-left: 8px;
    }
    .card-footer-info {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-top: 10px;
    }
  </style>
</head>

<body class="bg-dark text-white p-4">
  <h1 class="text-center mb-4">Book Collection</h1>

  <div class="text-center mb-4">
    <a href="/books/new" class="btn btn-success">Add New Book</a>
    <a href="/" class="btn btn-secondary">Home</a>
  </div>

  <% books.forEach(book => { %>
    <div class="book-card">
      <img src="<%= book.image %>" alt="Book Image" class="book-image">
      <div class="book-info">

        <div class="action-icons">
          <!-- Edit Button -->
          <button style="background-color: rgb(19, 218, 115); color: white; border: none; padding: 5px 10px; border-radius: 5px;">
            <a href="/books/<%= book._id %>/edit" title="Edit" style="color: white; text-decoration: none;">
              ‚úèÔ∏èEDIT
            </a>
          </button>

          <!-- Delete Button -->
          <form method="POST" action="/books/<%= book._id %>/delete" style="display:inline;">
            <button type="submit"
              style="background-color: rgb(255, 0, 0); color: white; border: none; padding: 5px 10px; border-radius: 5px; margin-left: 10px;"
              title="Delete">
              üóëÔ∏èDELETE
            </button>
          </form>
        </div>

        <!-- 1. Title -->
        <h5><strong><%= book.title %></strong></h5>

        <!-- 2. Author -->
        <p class="author-box"><%= book.author %></p>

        <!-- 3. Description -->
        <p><%= book.description %></p>

        <!-- 4. Category and 5. Rating -->
        <div class="card-footer-info">
          <div class="category-text"><%= book.category %></div>
          <div class="star-rating">
            <% for(let i = 0; i < Math.floor(book.rating); i++) { %>
              ‚òÖ
            <% } %>
            <% for(let i = Math.floor(book.rating); i < 5; i++) { %>
              ‚òÜ
            <% } %>
          </div>
        </div>

      </div>
    </div>
  <% }) %>

  <!-- //logout -->
  <div style="text-align: right; margin-bottom: 10px;">
  <form method="POST" action="/logout">
    <button class="btn btn-warning">üö™ Logout</button>
  </form>
</div>

</body>
</html>